<?xml version="1.0" encoding="UTF-8"?>
<devices xmlns="http://www.sec.ac.cn/devices-1.2">
  <device id="1-CURTAIN-1" name="幕布" type="CURTAIN">
    <!-- 开启关闭开关设备 -->
    <operation command="s{server.id}C{length}{deviceId}1\n"
        name="开启">
    </operation>
    <!-- 关闭开关设备 -->
    <operation command="s{server.id}C{length}{deviceId}0\n"
          name="关闭">
    </operation>
  </device>
  <!-- 投影机 -->
  <device id="1-SHADOW-1" name="投影机" type="SHADOW">
    <!-- 开启具有中控代码设备 -->
    <operation command="s{server.id}D{length}{deviceId}1\n"
        name="开启">
    </operation>
    <!-- 关闭具有中控代码设备 -->
    <operation command="s{server.id}D{length}{deviceId}0\n"
          name="关闭">
    </operation>
    <operation command="s{server.id}D{length}{deviceId}{code}\n"
          name="指令">
      <!-- 指令 -->
      <parameter name="code" maxValue="22" minValue="11" type="INTEGER" />
    </operation>
  </device>
  <!-- 多媒体计算机 -->
  <device id="1-PC-1" name="计算机" type="PC">
    <!-- 人机互动键值发送 -->
    <operation command="s{server.id}I{length}{deviceId}{key}\n"
        name="键值">
      <!-- 键盘 -->
      <parameter name="key" maxValue="99" minValue="0" type="STRING" />
    </operation>
    <!-- 自动演示启动(4个按钮) -->
    <operation command="s{server.id}I{length}{deviceId}1\n"
        name="开始">
    </operation>
    <operation command="s{server.id}I{length}{deviceId}2\n"
        name="暂停">
    </operation>
    <operation command="s{server.id}I{length}{deviceId}3\n"
        name="继续">
    </operation>
    <operation command="s{server.id}I{length}{deviceId}4\n"
        name="停止">
    </operation>
    <!-- 开启关闭具有可调性设备并具有一键开启关闭功能 -->
    <operation command="s{server.id}F{length}{deviceId}{onoff}\n"
        name="静音">
      <!-- 开关按钮 -->
      <parameter name="onoff" maxValue="1" minValue="0" type="BOOLEAN" />
    </operation>
  </device>
  <!-- 灯光 -->
  <device id="1-LIGHT-1" name="灯光" type="LIGHT">
    <!-- 按钮 -->
    <operation command="s{server.id}F{length}{deviceId}1\n"
        name="开灯">
    </operation>
    <!-- 按钮 -->
    <operation command="s{server.id}F{length}{deviceId}0\n"
          name="关灯">
    </operation>
    <!-- Slider -->
    <operation command="s{server.id}E{length}{deviceId}{val}\n"
        name="亮度">
      <parameter name="val" maxValue="99" minValue="0" type="INTEGER" />
    </operation>
  </device>
</devices>
